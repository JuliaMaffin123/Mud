<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="2"
            android:scrollbars="vertical"
            android:layout_weight="1"
            android:gravity="bottom"
            android:fontFamily="@font/robotomono"
            android:textColor="@color/white"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/inpSend"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/hint"
            android:layout_weight="4"
            android:singleLine="true"
            android:maxLines="1"
            android:background="@color/white"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnSend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:background="@color/purple_500"
            app:srcCompat="@drawable/ic_send"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:contentDescription="@string/btnSendDescription"/>
    </TableRow>

</TableLayout>
<!--
Разметка главной активности. Выполнена на основе TableLayout.
Первая строка с TextView для вывода игровых сообщений.
Вторая строка с полем ввода комманд и кнопкой отправки команду на обработку.
-->